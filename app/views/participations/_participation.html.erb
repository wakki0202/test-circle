<div id="<%= dom_id participation %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Content:</strong>
    <%= participation.content %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this participation", participation, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this participation', edit_participation_path(participation), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
